{
    "name": "dependency-diagnostics",
    "displayName": "Dependency Diagnostics",
    "description": "Detect and fix missing or incorrect dependencies across all package.json files in your workspace.",
    "version": "1.1.0",
    "icon": "./assets/icon.png",
    "publisher": "Iancovski",
    "homepage": "https://github.com/Iancovski/dependency-diagnostics",
    "license": "MIT",
    "keywords": [
        "npm",
        "yarn",
        "pnpm",
        "package.json",
        "dependencies",
        "diagnostics",
        "dependency checker",
        "missing dependencies",
        "version mismatch",
        "nodejs",
        "node_modules",
        "monorepo",
        "workspace"
    ],
    "author": {
        "name": "Vin√≠cius Iancovski",
        "email": "viniciusiancovski@outlook.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Iancovski/dependency-diagnostics.git"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Dependency Diagnostics",
            "properties": {
                "dependencyDiagnostics.ignoredDirectories": {
                    "type": "array",
                    "default": [
                        "**/.angular/**"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Ignores `package.json` files inside directories that match the configured glob patterns. `node_modules` directories are ignored by default (no configuration needed)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "prettier": "npx prettier . --write",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/semver": "^7.7.1",
        "@types/vscode": "^1.109.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.2",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "dependencies": {
        "minimatch": "^10.2.4",
        "semver": "^7.7.4"
    }
}
